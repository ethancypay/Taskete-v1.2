
<li data-item-id="<%= item.id %>" data-task-id="<%= task.id %>" data-controller="itemactions">
  <div class="shadow-md rounded-md bg-white px-4 py-2 my-2 flex justify-between items-center text-sm text-black">

    <%= item.title %>


    <div class="flex items-center gap-3">

      <button data-action="click->itemactions#editItemForm">
        <svg class="fill-current text-gray-200 hover:text-indigo-600" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15.984 16">
          <path id="pen_1" d="M34.006,432a2,2,0,0,1-2-2v-2a2,2,0,0,1,.585-1.415l9.99-10a2,2,0,0,1,2.826,0l2,2a2,2,0,0,1,0,2.828l-9.99,10A2,2,0,0,1,36,432Zm0-4v2h2l7.786-7.794-2-2Zm11.2-7.207.792-.793-2-2-.792.793Z" transform="translate(-32.008 -416)"/>
        </svg>
      </button>
      <div class="absolute w-48 bg-white z-20 shadow-lg rounded-lg hidden" >
        Edit form
      </div>

      <button data-action="click->itemactions#deleteItem" class="<%= 'hidden' if item.task.workflow.activated? %>">
        <svg class="fill-current text-gray-200" xmlns="http://www.w3.org/2000/svg" width="11.819" height="11.82" viewBox="0 0 11.819 11.82">
          <path id="X_simple_1" d="M489.387,711.977l4.214-4.214a.993.993,0,0,0-1.4-1.405l-4.214,4.214-4.214-4.214a.993.993,0,1,0-1.4,1.405l4.214,4.214-4.214,4.214a.993.993,0,1,0,1.4,1.405l4.214-4.214L492.2,717.6a.993.993,0,0,0,1.4-1.405Z" transform="translate(-482.072 -706.067)"/>
        </svg>
      </button>

    </div>

  </div>
</li>

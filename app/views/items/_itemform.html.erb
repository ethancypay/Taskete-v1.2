<%= simple_form_for @item, remote: true, html: {'data-item-target': 'form'} do |f| %>
  <%= f.input :title,
              label: false,
              input_html: {placeholder: "Enter a title for this item", class: "text-sm"} %>
  <%= f.hidden_field :task_id, :value => @task.id %>
  <%= f.button :submit,
              class: "",
              value: "Add item",
              input_html: {
                "data-action": "change->item#submitForm"
              } %>
<% end %>

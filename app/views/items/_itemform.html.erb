<%= simple_form_for @item, remote: true, html: {'data-item-target': 'form'} do |f| %>
  <%= f.input :title,
              label: false,
              input_html: {placeholder: "Enter a title for this item", class: "text-sm rounded-md bg-gray-100 px-3 h-16 w-full my-2"} %>
  <%= f.hidden_field :task_id, :value => @task.id %>
  <%= f.button :submit,
              class: "px-2 py-1 rounded-md mb-2",
              value: "Add item",
              input_html: {
                "data-action": "change->item#submitForm",
              } %>
<% end %>

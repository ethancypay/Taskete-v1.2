
<%# Title %>
<% if @workflow %>
  <div data-item-id=<%= @workflow.id%> data-controller="workflow">
    <div class="flex gap-2">

      <div class="rounded-xl bg-purple-100 py-2 px-4 mb-3">
        <h1 class="text-sm"><%= @workflow.title.capitalize %></h1>
      </div>

      <div class="rounded-xl bg-gray-100 py-2 px-4 mb-3 text-sm text-gray-400">
        Editing
      </div>

    </div>
  </div>
<% else %>
  <div class="h-12"></div>
<% end %>

<%# Workflow content %>
<div class="mb-5 h-screen rounded-lg border mx-auto relative flex">
  <div class="flex-grow flex flex-col">

    <div class="px-4 py-3 bg-gray-100 text-xs text-gray-400 rounded-tl-lg">
      Start
    </div>


    <% if @workflow %>
    <%# Content inside here %>
      <div class="px-2">
        <div data-controller="task" data-workflow-id=<%= @workflow.id%> >

          <div data-task-target="list">
          </div>

          <div data-task-target="newform">
          </div>
          <%= render "tasks/taskadd" %>
        </div>
      </div>
    <% end %>


    <div class="px-4 py-3 bg-gray-100 text-xs text-gray-400 rounded-bl-lg">
      End
    </div>

  </div>
  <div class="w-10 py-5 h-full border-l flex flex-col items-center">
    <div class="rounded-full w-3 h-3 bg-purple-400 mb-2"></div>
    <div class="rounded-full w-3 h-3 bg-purple-400 mb-2"></div>
  </div>
</div>


<div class="hidden sm:block" aria-hidden="true">
  <div class="py-5">
    <div class="border-t border-gray-200"></div>
  </div>
</div>


  <div class="mt-10 sm:mt-0">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Account Information</h3>
          <%= link_to "Back to dashboard", dashboard_path, class:"block text-sm font-medium text-gray-700" %>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <div class="col-span-6 sm:col-span-3">
                <%= f.input :first_name, autofocus: true, required: true, label_html: {class: "block text-sm font-medium text-gray-700"}, input_html: {autocomplete: "given-name", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"} %>
              </div>

              <div class="col-span-6 sm:col-span-3">
                <%= f.input :last_name, required: true, label_html: {class: "block text-sm font-medium text-gray-700"}, input_html: {autocomplete: "family-name", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"} %>
              </div>

              <div class="col-span-6 sm:col-span-4">
                <%= f.input :email, required: true, label_html: {class: "block text-sm font-medium text-gray-700"}, input_html: {class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"} %>
              </div>

              <div class="col-span-6 sm:col-span-4">
                <%= f.input :current_password,
                            required: true,
                            label_html: {class: "block text-sm font-medium text-gray-700"},
                            input_html: { autocomplete: "current-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" } %>
              </div>

              <div class="col-span-6 sm:col-span-4">
                <%= f.input :password,
                            required: false,
                            label: "New password",
                            label_html: {class: "block text-sm font-medium text-gray-700" },
                            input_html: { autocomplete: "new-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" } %>
              </div>

              <div class="col-span-6 sm:col-span-4">
                <%= f.input :password_confirmation,
                            required: false,
                            label_html: {class: "block text-sm font-medium text-gray-700"},
                            input_html: { autocomplete: "new-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" } %>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mt-2">
                Photo
              </label>
              <div class="mt-1 items-center">
                <% if current_user.photo %>
                  <%= cl_image_tag current_user.photo.key, crop: :scale, class: "inline-block mx-auto object-cover rounded-full h-12 w-12" %>
                <% else %>
                  <span class="inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100">
                    <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  </span>
                <% end %>
              <%= f.input :photo, label: false, direct_upload: true %>

            </div>
          </div>
          </div>
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
            <%= f.button :submit, "Update", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

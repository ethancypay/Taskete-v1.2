<div data-controller="toggle">
  <div data-task-id=<%= task.id %> data-workflow-id=<%= workflow.id %> data-controller="item" class="t-card border p-4 mb-2 mx-6 <%= 'bg-indigo-600  text-white' if task.current? %>" >
    <div class="flex justify-between">

      <button class="text-sm flex-grow text-left" data-action="click->item#getItems click->toggle#hide">
        <%= task.title %>
      </button>
      <% if task.completed == "completed" %>
        <button class='inline-block text-gray-500 text-sm disabled'>
          <i class="fas fa-check"></i> Completed
        </button>
      <% elsif task.completed == "current" %>
        <button data-action="click-> task#markComplete" class='inline-block <%= task.current? ? "text-white" : "text-indigo-600" %> text-sm' data-task-id=<%= task.id %>>
          <i class="far fa-check-square"></i> Mark as complete
        </button>
      <% end %>

    </div>

    <div class="flex hidden" data-item-target="taskcontent" data-toggle-target="hide" >
    </div>

  </div>
</div>

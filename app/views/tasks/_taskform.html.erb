<%= simple_form_for @task, remote: true, html: {'data-task-target': 'form', class:"flex-grow"} do |f| %>
  <%= f.input :title,
              label: false,
              input_html: {placeholder: "Enter a title for this task", class: "text-sm rounded-md bg-gray-100 px-3 h-16 w-full my-2"} %>
  <%= f.hidden_field :workflow_id, :value => "1" %>
  <%= f.button :submit,
              class: "px-2 py-1 rounded-md mb-2",
              value: "Add item",
              input_html: {
                "data-action": "change->task#submitForm",
              } %>
<% end %>

<%= simple_form_for @task, remote: true, html: {'data-task-target': 'form', class:"flex-grow"} do |f| %>
  <%= f.input :title,
              label: false,
              input_html: {
                placeholder: "Enter a title for this task",
                class: "text-sm rounded-md bg-gray-100 px-3 h-16 w-full my-2",
                data: { 'task-target': 'taskname' }
              } %>

  <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
  <%= f.button :submit,
              class: "px-2 py-1 rounded-md mb-2",
              value: "Add task",
              data: { "action": "click->task#submitForm" }
               %>
<% end %>

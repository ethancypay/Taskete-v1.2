<% workflows.each do |workflow| %>

  <% if workflow == @workflow %>
    <div data-action="click->world#selectWorkflow" class="px-4 py-2 my-1 text-sm rounded-lg bg-purple-100 duration-100">
  <% else %>
    <div data-action="click->world#selectWorkflow" class="px-4 py-2 my-1 text-sm rounded-lg hover:bg-gray-100 duration-100">
  <% end %>
    <%= link_to workflow.title, workflow_path(workflow), id: 'workflow' %>
  </div>

<% end %>

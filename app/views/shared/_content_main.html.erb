<div data-world-target="contentmain">
  <% if @workflow %>
    <div class="flex gap-2 items-center">
      <div class="rounded-xl bg-purple-100 py-2 px-4 mb-3">
        <h1 class="text-sm"><%= @workflow.title.capitalize %></h1>
      </div>
      <div class="rounded-xl bg-gray-100 py-2 px-4 mb-3 text-sm text-gray-400">Editing</div>
    </div>
  <% else %>
    <div class="h-12"></div>
  <% end %>

  <div class="mb-5 h-screen rounded-lg border mx-auto relative flex">

    <div class="flex-grow flex flex-col justify-between">
      <div class="px-4 py-2 bg-gray-100 text-xs text-gray-400">
        Start
      </div>

      <%# Content inside here %>
      <div class="flex-grow">
        <div class="flex justify-center" data-controller="task">

          <div data-task-target="list">

          </div>
          <div data-task-target="newform">
          </div>
          <%= render "tasks/taskadd" %>

        </div>
      </div>

      <div class="px-4 py-2 bg-gray-100 text-xs text-gray-400">
        End
      </div>
    </div>

    <%# workflow - task navigator %>
    <div class="w-10 py-5 h-full border-l flex flex-col items-center">
      <div class="rounded-full w-3 h-3 bg-purple-400 mb-2"></div>
      <div class="rounded-full w-3 h-3 bg-purple-400 mb-2"></div>
    </div>
  </div>
</div>

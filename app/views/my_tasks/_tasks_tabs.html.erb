<% tasks.each do |task| %>

  <% if task == @task %>
    <div data-controller="sidetabs" data-task-id=<%= task.id %> class="t-sidetab-btn-active flex items-center justify-between shadow-md">
  <% else %>
    <div data-controller="sidetabs" data-task-id=<%= task.id %> class="t-sidetab-btn flex items-center justify-between">
  <% end %>

    <div class="mr-3">
      <svg xmlns="http://www.w3.org/2000/svg" width="13" height="15" viewBox="0 0 14 16">
        <path id="paper_1" d="M266,416h-7a2.006,2.006,0,0,0-2,2v12a2.006,2.006,0,0,0,2,2h10a2.006,2.006,0,0,0,2-2v-9A5,5,0,0,0,266,416Zm3,14H259V418h5v5h5Zm-3-9v-3a3.009,3.009,0,0,1,3,3Z" transform="translate(-257 -416)"/>
      </svg>
    </div>

    <a class="flex-grow cursor-pointer" data-action="click->sidetabs#selectMyTask">
      <%= task.title %>
    </a>

  </div>

<% end %>
